<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/newActionBarStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title">
        <item name="android:textColor">@color/title</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="newActionBarStyle">
        <item name="android:background">#000</item>
    </style>

    <style name="detailCreate">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textColorHint">#000</item>
    </style>

    <style name="detailCreateTitles" parent="detailCreate">
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
